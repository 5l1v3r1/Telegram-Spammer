        <TextBox x:Name="Txb_Phone1"  HorizontalAlignment="Left" Height="23" Margin="122,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="214"/>

        <Button x:Name="Btn_Exit" Content="Выход" HorizontalAlignment="Left" Margin="413,265,0,0" VerticalAlignment="Top" Width="118" Height="31" Click="Btn_Exit_Click"/>

        <Button x:Name="Btn_Auth" Content="Авторизовать" HorizontalAlignment="Left" Margin="10,265,0,0" VerticalAlignment="Top" Width="381" Height="31" Click="Btn_Auth_Click"/>
        <Button x:Name="Btn_SendCodes" Content="Отправить код " HorizontalAlignment="Left" Margin="122,156,0,0" VerticalAlignment="Top" Width="328" Height="26" IsDefault="True" Click="Btn_SendCodes_Click"/>


        <TextBox x:Name="Txb_Code1" HorizontalAlignment="Left" Height="23" Margin="365,109,0,0" TextWrapping="Wrap" Text="Код" VerticalAlignment="Top" Width="85"/>

    </Grid>
</Window>
